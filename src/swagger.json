{
    "openapi": "3.0.0",
    "info": {
        "title": "RentalX Documentation",
        "description": "This is an API rent.",
        "version": "1.0.0",
        "contact": {
            "email": "itolifernandes@gmail.com"
        }
    },
    "paths":{
        "/categories":{
            "post":{
                "tags": ["Categories"],
                "summary": "Create a category",
                "description": "Create a new category",
                "requestBody":{
                    "content":{
                        "application/json":{
                            "schema":{
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type":"string"
                                    },
                                    "description": {
                                        "type":"string"
                                    }
                                },
                                "example":{
                                    "name": "Category name sample",
                                    "description": "Category description sample"
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    },
                    "500": {
                        "description": "Category already exists"
                    }
                }
            },
            "get":{
                "tags": ["Categories"],
                "summary": "List all categories",
                "description": "List all categories",
                "responses": {
                    "200": {
                        "description": "Sucess",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties":{
                                            "name": {
                                                "type": "string"
                                            },
                                            "description": {
                                                "type":"string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
                
            }
        },
        "/categories/import": {
            "post":{
                "tags": ["Categories"],
                "summary": "Import new categories from a CSV File",
                "description": "Upload a CSV file with categories and create these categories",
                "requestBody":{
                    "content":{
                        "multipart/form-data":{
                            "type": "object",
                            "properties":{
                                "file":{
                                    "type":"string",
                                    "format": "binary"
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        },
        "/specifications": {
            "post":{
                "tags": ["Specifications"],
                "summary":"Create a specification",
                "description": "Create a new specification",
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref":"#/definitions/Specifications"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Created"
                    }
                }
            }
        }
    },
    "definitions": {
        "Specifications": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            },
            "example": {
                "name": "Specification name sample",
                "description": "Specification description sample"
            }
        }
    }
}